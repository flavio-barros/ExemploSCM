@model ExemploSCM.Models.Entrada

@{
    ViewData["Title"] = "Registrar Entradas";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-sign-in-alt"></i>
        Registro de Entradas
    </div>
    <div class="card-body">
        <form asp-controller="Entrada" asp-action="Cadastrar" method="post">
            <div class="form-row">
                <div class="form-group col-md-8">
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        foreach (var mercadoria in ViewBag.Mercadorias)
                        {
                            listItems.Add(new SelectListItem
                            {
                                Text = mercadoria.nome,
                                Value = Convert.ToString(mercadoria.id)
                            });
                        }
                    }
                    @Html.LabelFor(model => model.Mercadoria.Id)
                    @Html.DropDownListFor(model => model.Mercadoria.Id, listItems, "-- Selecione a mercadoria --", new { @class = "form-control selectpicker", @readonly = false })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Quantidade)
                    @Html.EditorFor(model => model.Quantidade,
                        new { htmlAttributes = new { @class = "form-control", @placeholder = "Quantidade" } })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Local)
                    @Html.EditorFor(model => model.Local,
                        new { htmlAttributes = new { @class = "form-control", @placeholder = "Local" } })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Hora)
                    @Html.EditorFor(model => model.Hora, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Data)
                    @Html.EditorFor(model => model.Data,
                        new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group float-right">
                <button type="reset" class="btn btn-secondary">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>

