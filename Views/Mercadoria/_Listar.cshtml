@model IEnumerable<ExemploSCM.Models.Mercadoria>


<div class="table-responsive">
    @if (Model != null)
    {
        <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Nº registro</th>
                    <th>Fabricante</th>
                    <th>Tipo</th>
                    <th>Descrição</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mercadoria in Model)
                {
                    <tr>
                        <td>@mercadoria.Nome</td>
                        <td>@mercadoria.Numero_registro</td>
                        <td>@mercadoria.Fabricante</td>
                        <td>@mercadoria.Tipo</td>
                        <td>
                            <button type="button" class="btn btn-secondary btn-sm" data-tt="tooltip" data-placement="top"
                                    data-toggle="modal" data-target=".descricaoModal" title="Ver descrição">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                        <td>

                            <a type="button" class="btn btn-warning btn-sm" data-tt="tooltip" data-placement="top"
                                    title="Editar" data-target=".modalEditar" href="@Url.Action("Editar", "Mercadoria", new { id = @mercadoria.Id })">
                                <i class="far fa-edit"></i>
                            </a>
                            <a type="button" class="btn btn-danger btn-sm" data-tt="tooltip" data-placement="top"
                                    title="Remover" href="@Url.Action("Remover", "Mercadoria", new { id = @mercadoria.Id })">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="modal fade descricaoModal" tabindex="-1" role="dialog" aria-labelledby="descricaoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="descricaoModalLabel">Descrição</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
