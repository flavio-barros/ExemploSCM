@model ExemploSCM.Models.Saida

@{
    ViewBag.Title = "Registrar Saídas";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-sign-out-alt"></i>
        Registro de Saídas
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Cadastrar", "Saida", FormMethod.Post))
        {
            <div class="form-row">
                <div class="form-group col-md-8">
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        listItems.Add(new SelectListItem
                        {
                            Text = "Exemplo1",
                            Value = "Exemplo1"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Exemplo2",
                            Value = "Exemplo2"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Exemplo3",
                            Value = "Exemplo3"
                        });
                    }
                    @Html.LabelFor(model => model.Mercadoria)
                    @Html.DropDownListFor(model => model.Mercadoria, listItems, "-- Selecione a mercadoria --", new { @class = "form-control selectpicker", @readonly = false })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Quantidade)
                    @Html.EditorFor(model => model.Quantidade,
                        new { htmlAttributes = new { @class = "form-control", @placeholder = "Quantidade" } })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Local)
                    @Html.EditorFor(model => model.Local,
                        new { htmlAttributes = new { @class = "form-control", @placeholder = "Local" } })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Hora)
                    @Html.EditorFor(model => model.Hora, new { htmlAttributes = new { @class = "form-control"} })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Data)
                    @Html.EditorFor(model => model.Data,
                        new { htmlAttributes = new { @class = "form-control"} })
                </div>
            </div>
            <div class="form-group float-right">
                <button type="reset" class="btn btn-secondary">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        }
    </div>
</div>

